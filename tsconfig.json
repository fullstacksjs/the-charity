      "@camp/design": ["./src/design/index.ts"],
      "@camp/ui": ["./libs/ui/index.ts"],
      "@camp/domain": ["./src/domain/index.ts"],
      "@camp/config": ["./src/config/index.ts"],
      "@camp/router": ["./src/router/index.ts"],
      "@camp/messages": ["./src/messages.ts"],
      "@camp/hooks": ["./src/hooks/index.ts"],
      "@camp/infra": ["./src/infra/index.ts"],
      "@camp/utils": ["./src/utils/index.ts"]
