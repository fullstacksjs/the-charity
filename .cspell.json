{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en,fa",
  "dictionaryDefinitions": [
    {
      "name": "charity-en",
      "path": "./configs/cspell/charity.en.txt",
      "addWords": true
    },
    {
      "name": "charity-fa",
      "path": "./configs/cspell/charity.fa.txt",
      "addWords": true
    }
  ],
  "dictionaries": ["charity-en", "charity-fa"],
  "ignorePaths": [
    "node_modules/",
    "dist/",
    "*.svg",
    "*.tsbuildinfo",
    "*.mp4",
    ".*"
  ],
  "import": ["@cspell/dict-fa-ir/cspell-ext.json"]
}
